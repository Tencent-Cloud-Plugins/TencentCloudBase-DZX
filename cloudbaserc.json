{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "Discuzx",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "discuzx",
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcbimages/discuzx-tcb:3.4"
          },
          "containerPort": 80,
          "customLogs": "stdout,/dev/stdout,/dev/stderr",
          "envVariables": {
            "DB_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "DX_DB_HOST2": "{{env.DB_IP}}",
            "DX_DB_PORT": "{{env.DB_PORT}}",
            "DX_DB_NAME": "dzx",
            "DX_DB_USER": "{{env.MYSQL_USERNAME}}",
            "DX_DB_PASS": "{{env.MYSQL_PASSWORD}}",
            "SITE_URL": "https://${TcbHttpServiceDefaultDomain}",
            "TCB_NOT_SHOW_CYNOS_DB": "${Outputs.discuzx.Properties.InstanceId}"
          },
          "initialDelaySeconds": 100,
          "volumeMounts": {
            "/app": "dzx-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [{
        "type": "CFS",
        "name": "dzx-cfs"
      }, {
        "type": "CynosDB",
        "name": "discuzx",
        "envMap": {
          "IP": "DB_IP",
          "PORT": "DB_PORT",
          "USERNAME": "MYSQL_USERNAME",
          "PASSWORD": "MYSQL_PASSWORD"
        }
      }],
      "environment": {
        "ADMIN_NAME": {
          "description": "后台管理系统管理员账号",
          "required": true,
          "default": "admin"
        },
        "ADMIN_PASS": {
          "description": "后台管理系统管理员密码",
          "required": true,
          "default": "admin"
        }
      }
    }
  }
}